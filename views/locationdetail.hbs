<div class="locationHeader">

  <div class="ui stackable one column grid">
    <!-- information header -->
    <!-- name and cost -->
    <div class="column">
      <h1 id="location_name" class="location_name"></h1>
      &nbsp;&nbsp;
      <h2 class="zero_dollar price">$</h2>
      <h2 class="one_dollar price">$</h2>
      <h2 class="two_dollar price">$</h2>
      <h2 class="three_dollar price">$</h2>
    </div>
    <div class="row">

    </div>

  </div>

  <div class="second_header ui padded stackable three column divided grid" style="position: relative">
    <!-- secondary information -->
    <div class="four wide column">
      <div id="location_phone"></div>
      <div id="location_address"></div>
      <div id="location_hours"></div>
    </div>
    <div class="twelve wide center aligned column middle aligned">
      <h1 id="location_website"></h1>
    </div>

  </div>

</div>


<div class="ui celled grid">
  <!-- toggles -->
  <div class="row">
    <div class="four wide column">
      <button id="location_byob" class="fluid ui toggle button">BYOB</button>
    </div>

    <div class="four wide column">
      <button id="location_alcohol" class="fluid ui toggle button">ALCOHOL</button>
    </div>

    <div class="four wide column">
      <button id="location_latenight" class="fluid ui toggle button">LATE NIGHT</button>
    </div>

    <div class="four wide column">
      <button id="location_outdoor" class="fluid ui toggle button">OUTDOOR</button>
    </div>

  </div>
</div>

<div class="ui stackable grid">
  <!-- left column for secondary criteria -->
  <div class="ten wide column">
    <!-- secondary search criteria -->
    <div class="ui celled grid">

      <!-- BURGER ROW   -->
      <div class="row">
        <div class="ten wide column">
          <!-- burger list -->
          <div id="burger_list" class="burger_list ui items">
<!--



WE ARE PUTTING ALL THE BURGERS HERE!



 -->
          </div>
