            <i class="food icon"></i> Sides
          </button>
        </div>


      </div>
      <!-- FIRST ROW END -->
      <!-- SECOND ROW FOR ALLERGIES -->
      <div id="location_challenges" class="row">

        <div class="column">
          <button class="fluid ui active icon button">
            <i class="trophy icon"></i> Challenges
          </button>
        </div>

      </div>


      <!-- SECOND ROW END -->
      <!-- THIRD ROW FOR SIDES -->
      <div id="location_allergies" class="row">

        <div class="column">
          <button class="fluid ui active icon button">
            <i class="first aid icon"></i> Allergies
          </button>
        </div>

      </div>

      <!-- THIRD ROW END -->
      <!-- LAST ROW FOR VEGGIES -->
      <div id="location_veggies" class="row">

        <div class="column">
          <button class="fluid ui active icon button">
            <i class="leaf icon"></i> Veggies
          </button>
        </div>

      </div>




    </div>
