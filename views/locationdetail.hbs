          <ul>
            <li>Name: <%= name %></li>
            <li>Image: <%= image %></li>
            <li>Description: <%= description %></li>
            <div id="meat_list">
              <li>List of Meats:</li>
            </div>
            <li>Rating: <%= rating %></li>
            <li>Veggie: <%= veggie %></li>
          </ul>
        </script>
      </div>
    </div>
    <script type="text/template" id="meat-template">
      <ul>
        <li>Angus: <%= angus %></li>
