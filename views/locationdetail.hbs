          <!-- MODAL SHIT END -->


        </div>
      </div>
      <!-- END OF BURGER ROW -->
      <!-- CHALLENGES ROW   -->
      <div id="location_sides" class="row">

        <!-- FIRST ROW AFTER TOGGLES -->
        <div class="column">
